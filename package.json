{
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "dev-server": "encore dev-server",
        "dev": "encore dev",
        "watch": "encore dev --watch",
        "build": "encore production --progress",
        "prepare": "husky",
        "lint": "yarn lint:eslint && yarn lint:prettier",
        "lint:eslint": "eslint assets",
        "lint:prettier": "prettier --check \"assets/**/*.{js,scss,md}\"",
        "format": "yarn format:eslint && yarn format:prettier",
        "format:eslint": "eslint assets --fix",
        "format:prettier": "prettier --write \"assets/**/*.{js,scss,md}\""
    },
    "lint-staged": {
        "*.{js,jsx}": "eslint --fix",
        "*.{scss,md}": "prettier --write",
        "*.php": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "*.twig": "vendor/bin/twig-cs-fixer lint --fix --config=.twig-cs-fixer.php"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/eslint-parser": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@babel/preset-react": "^7.28.5",
        "@hotwired/stimulus": "^3.2.2",
        "@hotwired/turbo": "^8.0.21",
        "@symfony/stimulus-bridge": "^4.0.1",
        "@symfony/ux-turbo": "file:vendor/symfony/ux-turbo/assets",
        "@symfony/webpack-encore": "^5.2.0",
        "core-js": "^3.46.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "file-loader": "^6.2.0",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "lint-staged": ">=16.2.6",
        "prettier": "^3.6.2",
        "prop-types": "^15.8.1",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "sass": "1.93.*",
        "sass-loader": "^16.0.6",
        "webpack": "^5.102.1",
        "webpack-cli": "^6.0.1",
        "webpack-notifier": "^1.15.0"
    },
    "dependencies": {
        "@tabler/core": "^1.4.0"
    }
}
