{
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "bacon/bacon-qr-code": "^3.0.3",
        "league/commonmark": "^2.8.0",
        "league/glide-symfony": "^2.0.1",
        "pragmarx/google2fa": "^9",
        "symfony/asset": "8.0.*",
        "symfony/console": "8.0.*",
        "symfony/dotenv": "8.0.*",
        "symfony/expression-language": "8.0.*",
        "symfony/flex": "^2.10",
        "symfony/form": "8.0.*",
        "symfony/framework-bundle": "8.0.*",
        "symfony/monolog-bundle": "^4.0.1",
        "symfony/runtime": "8.0.*",
        "symfony/security-bundle": "8.0.*",
        "symfony/stimulus-bundle": "^2.32",
        "symfony/twig-bundle": "8.0.*",
        "symfony/ux-turbo": "^2.32",
        "symfony/webpack-encore-bundle": "^2.4",
        "symfony/yaml": "8.0.*",
        "twig/extra-bundle": "^3.22.2",
        "twig/markdown-extra": "^3.22",
        "twig/twig": "^3.22.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93.0",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^2.1.36",
        "phpstan/phpstan-symfony": "^2.0.12",
        "rector/rector": "^2.3.4",
        "symfony/apache-pack": "^1.0.1",
        "symfony/debug-bundle": "8.0.*",
        "symfony/maker-bundle": "^1.65.1",
        "symfony/stopwatch": "8.0.*",
        "symfony/web-profiler-bundle": "8.0.*",
        "vincentlanglet/twig-cs-fixer": "^3.12"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "bump-after-update": true,
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true,
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php84": "*",
        "symfony/polyfill-php83": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php80": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "lint:php-cs": "php-cs-fixer fix --dry-run --diff --verbose",
        "lint:phpstan": "phpstan analyse",
        "lint:twig": "twig-cs-fixer lint",
        "lint:rector": "rector process --dry-run",
        "lint": [
            "@lint:php-cs",
            "@lint:phpstan",
            "@lint:twig",
            "@lint:rector"
        ],
        "fix:php-cs": "php-cs-fixer fix",
        "fix:twig": "twig-cs-fixer lint --fix",
        "fix:rector": "rector process",
        "fix": [
            "@fix:php-cs",
            "@fix:twig",
            "@fix:rector"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.4.*"
        }
    }
}
